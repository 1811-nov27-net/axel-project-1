@model IEnumerable<PizzaStore.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <form asp-action="Index" method="GET" class="form-inline">
        <label class="sr-only" for="search">Search:</label>
        <input type="search" class="form-control mb-2 mr-sm-2 mb-sm-0" id="search" name="search" placeholder="Search" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Delete</a>
                    <a asp-controller="Orders" asp-action="Create" asp-route-id="" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Place Order</a>
                   
                </td>
            </tr>
        }
    </tbody>
